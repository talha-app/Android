<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/mainActivityEditTextName"
        android:hint="Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/mainActivityEditTextCitizenId"
        android:hint="CitizenId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number" />

    <EditText
        android:id="@+id/mainActivityEditTextPhone"
        android:hint="Phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="phone" />

    <Button
        android:onClick="onSaveButtonClick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save" />
    <Button
        android:onClick="onCleanButtonClick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Clean" />

    <Button
        android:onClick="onExitButtonClick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Exit" />


    <TextView
        android:onClick="onPersonInfoTextViewClicked"
        android:id="@+id/mainActivityTextViewPersonInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>