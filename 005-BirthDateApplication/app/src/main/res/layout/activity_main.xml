<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/mainActivityEditTextName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text="Talha Ayd"
        android:hint="İsim giriniz"/>

    <EditText
        android:id="@+id/mainActivityEditTextBirthDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="date"
        android:hint="Doğum tarihiniz (dd/MM/yyyy)"
        android:text="08/09/1993"/>

    <TextView
        android:id="@+id/mainActivityTextViewAge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Yaş" />

    <Button
        android:onClick="onOKButtonClicked"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tamam" />

    <Button
        android:onClick="onExitButtonClicked"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Çıkış" />

    <TextView
        android:id="@+id/mainActivityTextViewPerson"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Person"
        android:onClick="onTextViewPersonClicked"/>
</LinearLayout>