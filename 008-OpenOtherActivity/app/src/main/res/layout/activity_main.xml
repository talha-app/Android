<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="activity.MainActivity">


    <EditText
        android:id="@+id/mainActivityEditTextName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10" />

    <EditText
        android:id="@+id/mainActivityEditTextNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number" />

    <Switch
        android:id="@+id/mainActivitSwitchOpenStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Connection Status" />

    <Button
        android:onClick="onOpenSecondActivityClicked"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Open Second Activity" />

    <Button
        android:onClick="onOpenThirdActivityClicked"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/mainactivity_button_open_second_activity_text"  />

</LinearLayout>