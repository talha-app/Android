<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:id="@+id/mainActivityLinearLayoutMain">

    <Button
        android:id="@+id/mainActivityButtonChangeColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Change Color" />

    <Button
        android:id="@+id/mainActivityButtonChangeTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Change Title" />

    <EditText
        android:id="@+id/mainActivityEditTextName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Başlık yazısını giriniz" />

    <Button
        android:id="@+id/mainActivityButtonSecondActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Second Activity" />

</LinearLayout>